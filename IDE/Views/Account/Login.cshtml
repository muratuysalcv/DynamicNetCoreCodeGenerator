@model Scriptingo.Admin.Models.LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}
<!-- App Capsule -->
<div id="appCapsule" class="pt-0">
    <div class="login-form mt-1">
        <div class="section">
            <img src="@Url.Content("~/lib/design/assets/img/sample/photo/vector4.png")" alt="image" class="form-image">
        </div>
        <div class="section mt-1">
            <h1>@Html.T("Get started")</h1>
            <h4>@Html.T("Fill the form to log in")</h4>
        </div>
        <div class="section mt-1 mb-5">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group boxed">
                    <div class="input-wrapper">
                        <input asp-for="Email" class="form-control" placeholder="@Html.T("Email")" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <i class="clear-input">
                            <ion-icon name="close-circle"></ion-icon>
                        </i>
                    </div>
                </div>

                <div class="form-group boxed">
                    <div class="input-wrapper">
                        <input asp-for="Password" type="password" class="form-control" placeholder="@Html.T("Password")" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <i class="clear-input">
                            <ion-icon name="close-circle"></ion-icon>
                        </i>
                    </div>
                </div>

                <div class="form-links mt-2">
                    <div>
                        <a href="@Url.Action("register")">@Html.T("Register Now")</a>
                    </div>
                    <div><a href="@Url.Action("forgotpassword")" class="text-muted">@Html.T("Forgot Password?")</a></div>
                </div>

                <div class="form-button-group">
                    <button type="submit" class="btn btn-primary btn-block btn-lg">@Html.T("Log in")</button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
