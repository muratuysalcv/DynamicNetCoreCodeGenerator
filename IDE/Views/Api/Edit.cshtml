@model Scriptingo.Admin.Models.ApiModel

@{
    if (Model.ID > 0)
    {
        ViewData["Title"] = Html.T("Api Edit").ToString();
    }
    else
    {
        ViewData["Title"] = Html.T("Api Create").ToString();
    }
    Layout = "~/Views/Shared/_Layout.cshtml";
    var disabledName = "";
    if (Model.ID > 0)
    {
        disabledName = "disabled";
    }
    ViewData["back_url"] = Url.Action("index","api").ToString();
    ViewData["save_button"] = true; ;
}
<div class="section full mt-2 mb-2">
    <div class="wide-block pb-1 pt-2">
        <form asp-action="edit">
            <input asp-for="ID" type="hidden" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group boxed">
                <div class="input-wrapper">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <i class="clear-input">
                        <ion-icon name="close-circle"></ion-icon>
                    </i>
                </div>
            </div>

            <div class="form-group boxed">
                <div class="input-wrapper">
                    <label asp-for="Description" class="form-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <i class="clear-input">
                        <ion-icon name="close-circle"></ion-icon>
                    </i>
                </div>
            </div>

            <div class="form-group boxed">
                <div class="input-wrapper">
                    <label asp-for="Host" class="form-label"></label>
                    <input asp-for="Host" class="form-control" />
                    <span asp-validation-for="Host" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group boxed">

                <div class="form-check mb-1">
                    <input class="form-check-input" asp-for="IsPrivate" />
                    <label class="form-check-label" asp-for="IsPrivate">
                        @Html.T("Is Private")
                    </label>
                </div>
                <i class="clear-input">
                    <ion-icon name="close-circle"></ion-icon>
                </i>
            </div>
            <div class="form-group boxed">

                <div class="form-check mb-1">
                    <input class="form-check-input" asp-for="Active" />
                    <label class="form-check-label" asp-for="Active">
                        @Html.T("Active")
                    </label>
                </div>
                <i class="clear-input">
                    <ion-icon name="close-circle"></ion-icon>
                </i>
            </div>
           @* <div class="mt-2">
                <button class="btn btn-primary btn-block" type="submit">Submit</button>
            </div>*@
        </form>

    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
