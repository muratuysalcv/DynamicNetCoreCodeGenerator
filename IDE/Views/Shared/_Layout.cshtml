@using Scriptingo.Common;
@using Scriptingo.Common.Models;
@using Scriptingo.FastApi.Common;
@{
    Layout = "_LayoutBase";
    var languages = new FastApiContext<_lang>().Data.ToList();
    var selectedLanguage = languages.FirstOrDefault(x => x.culture_code == Thread.CurrentThread.CurrentCulture.Name);
    var rawUrl = ViewData["RawUrl"] + "";
}


<!-- * App Header -->
<!-- Search Component -->
@if (!IsSectionDefined("appHeader"))
{
    <div class="appHeader">
        <div class="left">
            <a href="#" class="headerButton" data-bs-toggle="offcanvas" data-bs-target="#sidebarPanel">
                <ion-icon name="menu-outline"></ion-icon>
            </a>
            <a href="@Url.Action("index","dashboard")" class="headerButton">
                Latest Api
            </a>
        </div>
        <div class="pageTitle">
            @ViewData["Title"]
        </div>
        <div class="right">

            @if (ViewData["back_url"] != null)
            {
                <a href="@ViewData["back_url"]" class="headerButton">
                    <span class="iconedbox bg-primary">
                        <ion-icon name="chevron-back-outline" role="img" class="md hydrated" aria-label="chevron back outline"></ion-icon>
                    </span>
                </a>
            }
            @if (ViewData["create_url"] != null)
            {
                <a href="@ViewData["create_url"]" class="headerButton">
                    <span class="iconedbox bg-primary">
                        <ion-icon name="add" role="img" class="md hydrated" aria-label="add"></ion-icon>
                    </span>
                </a>
            }
            @if (ViewData["save_button"] != null)
            {

                <a href="#!" onclick="$('form').submit();" class="headerButton">
                    <span class="iconedbox bg-primary">
                        <ion-icon name="checkmark-done-outline" role="img" class="md hydrated" aria-label="checkmark-done-outline"></ion-icon>
                    </span>
                </a>
            }

            <a href="#" class="headerButton toggle-searchbox">
                <ion-icon name="search-outline"></ion-icon>
            </a>
        </div>
    </div>
    <div id="search" class="appHeader">
        <form class="search-form">
            <div class="form-group searchbox">
                <input type="text" class="form-control" placeholder="@Html.T("Search...")">
                <i class="input-icon">
                    <ion-icon name="search-outline"></ion-icon>
                </i>
                <a href="#" class="ms-1 close toggle-searchbox">
                    <ion-icon name="close-circle"></ion-icon>
                </a>
            </div>
        </form>
    </div>

}
else
{
    @RenderSection("appHeader",false)
}
